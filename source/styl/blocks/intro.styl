.main-background
  background-color grey
  max-width  1366px
  max-height  768px
  background-image url("../../img/intro-background.png")
  background-size cover
  background-repeat no-repeat
  margin-left auto
  margin-right auto

.intro
  padding-top 160px
  margin-left 120px

  &__capabilities
    display flex

  &__order
    background-color #0DD1A2
    font-weight bold
    font-size 21px
    line-height (24 / 21)
    padding 5px 10px 5px 10px

  &__play-video
    font-weight bold
    font-size 21px
    line-height (24 / 21)
    background-color transparent
    border 2px solid #0DD1A2
    box-sizing border-box
    border-radius 2px
    padding 3px 10px 3px 10px
    margin-left 10px
