.page-header
  z-index 1
  max-width 1238px
  position fixed
  display flex
  justify-content space-between
  padding-top 43px
  margin auto
  left 0
  right 0

.main-nav

  &__list
    display flex
    text-transform uppercase
    letter-spacing 0.05em
  &__item
    margin-left 15px
    margin-right 15px

  &__link
    display inline-block
    vert-align middle
    padding 5px 10px 5px 10px

.user-capabilities

  &__button
    font-weight bold
    font-size 14px
    line-height (16 / 14)
    padding 5px 10px 5px 10px

  &__phone
    padding 5px 10px 5px 10px

