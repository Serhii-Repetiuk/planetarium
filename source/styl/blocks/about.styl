.about
  &__container
    display flex
    position relative
    padding 110px 0 50px 120px

  &__title
    margin-top 0

  &__description
    max-width 440px
    padding-top 57px
    padding-left 30px
    font-weight 300
    font-size 17px
    line-height (25 / 17)

  &__gallery
    padding 150px 30px 20px 30px
    position relative
    &:before
      content ''
      position absolute
      border 4px solid #0DD1A2
      width 545px
      height 300px
      left 60px
      bottom 70px
      z-index 0

  &__page-down-container
    display flex

.carousel
  &__title
    margin 0
    position absolute
    z-index 3

  &__image
    position relative
    width 562px
    height 300px
    z-index 1
