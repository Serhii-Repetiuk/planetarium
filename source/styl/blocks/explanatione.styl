.explanations
  padding-top 150px
  padding-left 90px

  &__list
    padding-top 55px
    max-width 1128px
    display flex
    flex-wrap wrap

.explanation
  display flex
  position relative
  align-content space-around
  max-width 535px
  max-height 160px
  box-sizing border-box
  margin-bottom 40px

  &__text-container
    margin 0 0 0 20px
    overflow auto

  &__count
    content ''
    position: absolute
    display inline-block
    vertical-align middle
    background-color white
    border-radius 50%
    left: -18px
    top: 99px
    z-index: 2
    color #0dd1a2
    padding .3em .5em
    font-weight 600
    font-size 28px
    line-height (28 / 32)

  &__img-container

  &__img
    position relative
    width 195px
    height 130px
    z-index 1
    &:before
      content ''
      position absolute
      border 2px solid #0DD1A2
      width 195px
      height 130px
      left 10px
      bottom 10px
      z-index 0

  &__title
    margin 0
    padding 10px 0 10px 0

  &__description
    margin 0


