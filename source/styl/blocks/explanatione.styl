.explanation
  display flex
  position relative
  align-content space-around
  max-width 535px
  max-height 150px
  box-sizing border-box
  margin-bottom 40px

  &__text-container
    margin 0 0 0 20px
    overflow auto

  &__img-container


  &__img
    position relative
    width 195px
    height 130px
    z-index 5
