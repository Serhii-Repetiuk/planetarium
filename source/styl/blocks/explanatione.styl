.explanations
  &__container
    position relative
    padding-top 150px
    padding-left 120px
  &__list
    padding-top 55px
    padding-left 22px
    max-width 1300px
    display flex
    flex-wrap wrap

.explanation
  display flex
  position relative
  align-content space-around
  max-width 535px
  max-height 200px
  box-sizing border-box

  &:nth-child(1)
    margin-right 78px
    margin-bottom 95px

    &:after
      content ''
      position absolute
      background-size cover
      background-repeat no-repeat
      background-image url("../../img/explanation-tail-1-2.svg")
      width 261px
      height 50px
      left 341px
      top 5px

  &:nth-child(2)
    margin-top 17px
    margin-bottom 78px

  &:nth-child(3)
    margin-left 30px
    margin-right 70px

    &:after
      content ''
      position absolute
      background-size cover
      background-repeat no-repeat
      background-image url("../../img/explanation-tail-2-3.svg")
      width 523px
      height 71px
      left 46px
      bottom 211px

  &:nth-child(4)
    margin-top 18px

    &:after
      content ''
      position absolute
      background-size cover
      background-repeat no-repeat
      background-image url("../../img/explanation-tail-3-4.svg")
      width 244px
      height 43px
      right 544px
      bottom 130px

  &__text-container
    margin 0 0 0 40px
    overflow auto

  &__count
    content ''
    position: absolute
    display inline-block
    vertical-align middle
    background-color white
    border-radius 50%
    left: -18px
    top: 99px
    z-index: 2
    color #0dd1a2
    padding .3em .5em
    font-weight 600
    font-size 28px
    line-height (28 / 32)

  &__page-down-container
    display flex

  &__img
    position relative
    &:before
      content ''
      position absolute
      border 2px solid #0DD1A2
      width 195px
      height 130px
      left 10px
      bottom 10px
      z-index 0

  img
    position relative
    width 195px
    height 130px
    z-index 1

  &__title
    max-width 117px
    margin 0
    padding 0 0 10px 0

  &__description
    max-width 300px
    margin 0

