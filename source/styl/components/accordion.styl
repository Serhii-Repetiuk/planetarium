.questions
  max-width 904px
  padding-left 91px
  padding-right 371px
  display flex
  flex-direction column

  &__item
    min-height 100%
    padding 0 132px 5px 132px

.question
  display flex
  flex-direction column

  &__container
    max-height 68px
    display flex
    align-items center
    justify-content space-between
    background-color #ffffff
    color #444
    cursor pointer
    width 100%
    border none
    text-align left
    outline none
    font-size 15px
    transition 0.4s
    +width-between(767, 1024)
      max-height 56px

  &__title
    padding-left 5px
    max-width 832px
    font-weight 500
    font-size 17px
    line-height ( 28 / 21)
    +width-between(767, 1024)
      font-size 14px

  &__text-container
    max-width 640px
    color black
    min-height 100%
    padding -4px 18px 9px 18px
    margin-top 0
    background-color: white
    max-height 0
    overflow hidden
    transition max-height 0.2s ease-out

  &__text
    margin 0
    font-weight 300
    font-size 15px
    line-height 1.5
    padding 0 214px 15px 50px

  &__button
    padding 0
    cursor pointer
    position relative
    min-width 72px
    min-height 68px
    border none
    background-color #15B38D
    +width-between(767, 1024)
      min-width 60px
      min-height 56px

  &__button-img
    top 22px
    left 24px
    position absolute
    width 26px
    height 26px
    background url("../../img/plus.svg") 0 50% no-repeat
    transition transform 0.3s
    +width-between(767, 1024)
      top 16px
      left 19px

    &--active
      transform rotate(50deg)
