.questions
  padding-left 91px
  padding-right 371px
  display flex
  flex-direction column

  &__item
    min-height 100%
    padding 5px 0 5px 0

.question
  display flex
  flex-direction column

  &__container
    display flex
    background-color #ffffff
    color #444
    cursor pointer
    width 100%
    border none
    text-align left
    outline none
    font-size 15px
    transition 0.4s

  &__text-container
    min-height 100%
    padding 0 18px
    background-color: white
    max-height 0
    overflow hidden
    transition max-height 0.2s ease-out

