.questions
  background-color #957DAD
  display flex
  flex-direction column
  padding-left 300px
  padding-right 300px

  &__item
    background-color #D291BC
    border 5px solid #FFDFD3
    min-height 100%

.question
  display flex
  flex-direction column

  &__container
    display flex

  &__container
    background-color #D291BC
    color #444
    cursor pointer
    width 100%
    border none
    text-align left
    outline none
    font-size 15px
    transition 0.4s

  &__text-container
    padding 0 18px
    background-color: white
    max-height 0
    overflow hidden
    transition max-height 0.2s ease-out
