.permanent-background
  background-color grey
  background-image url("/img/permanent-bg.png")
  -moz-background-size 100% /* Firefox 3.6+ */
  -webkit-background-size 100% /* Safari 3.1+ и Chrome 4.0+ */
  -o-background-size 100% /* Opera 9.6+ */
  background-size 100%
  background-repeat no-repeat
  margin-left auto
  margin-right auto

body
  background-color gray
  font-family 'Ubuntu', 'Arial', sans-serif
  color #FFFFFF
  min-width 320px
  padding 0
  margin 0

h1
  font-weight 600
  font-size 96px
  line-height (110 / 96)

h2
  font-weight 600
  font-size 44px
  line-height (51 / 44)

h3
  font-weight 600
  font-size 21px
  line-height (24 / 21)

h4
  font-weight 600
  font-size 21px
  line-height (24 / 21)

p
  font-weight 300
  font-size 15px
  line-height 1.5

a
  text-decoration none
  color #FFFFFF

ul
  list-style none
  padding 0
  margin 0

button
  font-family 'Ubuntu', 'Arial', sans-serif

.section-title
  position relative
  padding-right 36px
  padding-bottom 5px
  margin 0
  border-bottom 3px solid #0dd1a2

.section-title-container
  display flex

.button
  background-color transparent
  color #FFFFFF
  box-sizing border-box
  border 2px solid #0DD1A2
  vertical-align middle

  text-transform uppercase
  letter-spacing 0.05em

  &:hover
    box-sizing border-box
    border-radius 2px
    background-color #0DD1A2
    cursor pointer


.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip rect(0 0 0 0)
  overflow hidden

//Стили для стрелки "вниз"

.page-down
  position relative
  margin 0 auto
  opacity 0.64

  &__button
    display flex
    flex-direction column
    background transparent
    border none
    color #ffffff
    cursor pointer

    font-weight 400
    text-transform uppercase
    font-size 11px
    line-height (15 / 11)
    letter-spacing 0.12em

  &__arrow
    margin 0 auto
    cursor pointer
    width 20px
    height 20px
    background-image url("/img/arrow-down.svg")
    background-size cover
    background-position center

//    Стили для иконок соц-сетей

.social-list
  position relative
  display flex
  align-items center

  svg
    position absolute
    padding 15px
    opacity 0.64

    &:hover
      opacity 1

  &__facebook
    display block
    width 11px
    height 22px
    bottom -3px
    left 52px

  &__vk
    display block
    width 28px
    height 15px
    bottom 0
    left 86px


// Стили для формы заказа

.order
  position relative
  left 50%
  top 50%
  width 560px
  height 380px
  bottom 10px
  margin-top -190px
  margin-left -280px
  padding 30px 60px
  box-sizing border-box
  background-color #F3F3F3
  border-radius: 3px

  &__container
    display flex
    flex-direction column
    align-items center

  &__title
    font-weight bold
    font-size 21px
    line-height 1.1

  &__paragraph
    text-align center
    font-size 15px
    line-height 1.3
    opacity 0.64


.order-form
  display flex
  flex-direction column
  align-items center

  input
    display flex
    width 400px
    height 46px
    padding-left 20px
    margin-bottom 9px
    border none
    opacity 0.4
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.05)

  &__send
    width 125px
    height 34px

    color rgba(0, 0, 0, 0.4)
    font-weight bold
    font-size 14px
    line-height 1.1

    &:hover
      color white

  &__close
    position absolute
    right 0
    top 0
    border none
    padding 15px
    cursor pointer

.modal
  position: fixed
  color: #000000
  box-shadow: 0 10px 20px 0 rgba(4, 6, 6, 0.2)
  z-index: 2


@keyframes bounce {
  0%   { transform: translateY(-2000px); }
  70%  { transform: translateY(30px);    }
  90%  { transform: translateY(-10px);   }
  100% { transform: translateY(0);       }
}

.modal-show
  animation-name bounce
  animation-duration: 0.5s

.modal-shadow
  background-color rgba(0, 0, 0, 0.8)
  height 100%
  left 0
  position fixed
  top: 0
  width: 100%
  z-index: 1

.modal-close{
  animation-name: modal-close;
  -webkit-animation-name: modal-close;

  animation-duration: 1s;
  -webkit-animation-duration: 1s;

  animation-timing-function: ease;
  -webkit-animation-timing-function: ease;

  visibility: visible !important;
}

@keyframes modal-close {
  0% {
    transform: translateY(-100%);
  }
  50%{
    transform: translateY(8%);
  }
  65%{
    transform: translateY(-4%);
  }
  80%{
    transform: translateY(4%);
  }
  95%{
    transform: translateY(-2%);
  }
  100% {
    transform: translateY(0%);
  }
}

@-webkit-keyframes modal-close {
  0% {
    -webkit-transform: translateY(-100%);
  }
  50%{
    -webkit-transform: translateY(8%);
  }
  65%{
    -webkit-transform: translateY(-4%);
  }
  80%{
    -webkit-transform: translateY(4%);
  }
  95%{
    -webkit-transform: translateY(-2%);
  }
  100% {
    -webkit-transform: translateY(0%);
  }
}
