body
  background-color gray
  font-family 'Ubuntu', 'Arial', sans-serif
  color #FFFFFF
  min-width 320px
  padding 0
  margin 0
h1
  font-weight 600
  font-size 96px
  line-height (110 / 96)

h2
  font-weight 600
  font-size 44px
  line-height (51 / 44)

h3
  font-weight 600
  font-size 21px
  line-height (24 / 21)

h4
  font-weight 600
  font-size 21px
  line-height (24 / 21)

p
  font-weight 300
  font-size 15px
  line-height 1.3

a
  text-decoration none
  color #FFFFFF

ul
  list-style none
  padding 0
  margin 0

button
  font-family 'Ubuntu', 'Arial', sans-serif


.button
  background-color transparent
  color #FFFFFF
  border 2px solid #0DD1A2
  box-sizing border-box
  border-radius 2px

.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip rect(0 0 0 0)
  overflow hidden
