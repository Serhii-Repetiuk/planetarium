.permanent-background
  background-color grey
  background-image url("/img/permanent-bg.png")
  -moz-background-size 100% /* Firefox 3.6+ */
  -webkit-background-size 100% /* Safari 3.1+ Ð¸ Chrome 4.0+ */
  -o-background-size 100% /* Opera 9.6+ */
  background-size 100%
  background-repeat no-repeat
  margin-left auto
  margin-right auto

body
  background-color gray
  font-family 'Ubuntu', 'Arial', sans-serif
  color #FFFFFF
  min-width 320px
  padding 0
  margin 0

h1
  font-weight 600
  font-size 96px
  line-height (110 / 96)

h2
  font-weight 600
  font-size 44px
  line-height (51 / 44)

h3
  font-weight 600
  font-size 21px
  line-height (24 / 21)

h4
  font-weight 600
  font-size 21px
  line-height (24 / 21)

p
  font-weight 300
  font-size 15px
  line-height 1.5

a
  text-decoration none
  color #FFFFFF

ul
  list-style none
  padding 0
  margin 0

button
  font-family 'Ubuntu', 'Arial', sans-serif

.section-title
  position relative
  padding-right 36px
  padding-bottom 5px
  margin 0
  border-bottom 3px solid #0dd1a2

.section-title-container
  display flex

.button
  background-color transparent
  color #FFFFFF
  border 2px solid #0DD1A2
  box-sizing border-box
  border-radius 2px

  text-transform uppercase
  letter-spacing 0.05em

.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip rect(0 0 0 0)
  overflow hidden

.page-down
  position relative
  margin 0 auto
  opacity 0.64

  &__button
    display flex
    flex-direction column
    background transparent
    border none
    color #ffffff
    cursor pointer

    font-weight 400
    text-transform uppercase
    font-size 11px
    line-height (15 / 11)
    letter-spacing 0.12em

  &__arrow
    margin 0 auto
    cursor pointer
    width 20px
    height 20px
    background-image url("/img/arrow-down.svg")
    background-size cover
    background-position center

